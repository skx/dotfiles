#!/bin/sh

# Run each of our plugin-based linters
for tool in bodyclose sqlclosecheck shadow nilness ; do
    go vet -vettool=$(which "${tool}") ./...
done

# Dead code detector
deadcode -test ./...

# Standard linter
go vet ./...

# More thorough linter.
staticcheck -checks all ./...

# Consistency-checker
go-consistent ./...

# Security checker
govulncheck ./...
